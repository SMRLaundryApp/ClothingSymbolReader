################################################################################
#	functions							       #
################################################################################
find_samples()
{

	samples="$(find share/samples -type f | sort)"
}

################################################################################
#	main								       #
################################################################################
main()
{
	find_samples

	for i in ${samples}
	do
		echo		${i}
		export		IMG_FNAME=${i}
		./build/laundry-symbol-reader
	done
}

################################################################################
#	run								       #
################################################################################
main


################################################################################
#	end of file							       #
################################################################################

